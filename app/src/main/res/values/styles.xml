<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="android:spinnerDropDownItemStyle">@style/mySpinnerDropDownItemStyle</item>
        <item name="android:spinnerItemStyle">@style/mySpinnerItemStyle</item>
        <item name="colorPrimary">@color/main_color</item>
        <item name="colorAccent">@color/dark_text_color</item>
        <item name="android:textViewStyle">@style/myTextViewStyle</item>
        <item name="android:editTextStyle">@style/myEditTextStyle</item>
        <item name="android:radioButtonStyle">@style/myRadioButtonStyle</item>
        <item name="colorControlNormal">@color/dark_text_color</item>
        <item name="colorControlActivated">@color/dark_text_color</item>
        <item name="colorControlHighlight">@color/dark_text_color</item>
    </style>
    <style name="AppTheme1" parent="AppTheme">
        <item name="actionBarStyle">@style/myActionBarStyle</item>
    </style>
    <style name="mySpinnerItemStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/dark_text_color</item>
    </style>
    <style name="mySpinnerDropDownItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="myActionBarStyle" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="android:color">#FFFFFF</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="myTextViewStyle" parent="@android:style/Widget.Holo.TextView">
        <item name="android:textColor">@color/dark_text_color</item>
    </style>
    <style name="myEditTextStyle" parent="@android:style/Widget.Holo.EditText">
        <item name="android:textColor">@color/dark_text_color</item>
        <item name="android:textColorHint">@color/dark_text_color</item>
    </style>
    <style name="myRadioButtonStyle" parent="@android:style/Widget.Holo.Light.CompoundButton.RadioButton">
        <item name="android:textColor">@color/dark_text_color</item>
    </style>
</resources>
